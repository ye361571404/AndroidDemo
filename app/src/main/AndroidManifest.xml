            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.MY_SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".demos.dependencies.xutils.XUtilsDownloadActivity"
            android:label="@string/dependencies_xutils_download">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.MY_SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity android:name=".demos.dependencies.xutils.DownloadActivity" />
        <activity
            android:name=".demos.feature.openfile.OpenFileActivity"
            android:label="@string/feature_openfile">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.MY_SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.hua.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <activity android:name=".demos.views.WebViewActivity3" android:label="@string/views_webview3">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.MY_SAMPLE_CODE" />
            </intent-filter>
        </activity>





    </application>

</manifest>