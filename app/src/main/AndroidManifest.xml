            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.MY_SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <!-- 动态改变主题颜色 -->
        <activity
            android:name=".demos.dependencies.magica.MagicaSakuraActivity"
            android:label="@string/dependencies_magica_sakura"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.MY_SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".demos.views.WebViewActivity2"
            android:label="@string/views_webview2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.MY_SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
